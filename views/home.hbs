<h1>Every1 :D</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each friends}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>
        <a class="btn btn-primary" href="/friend/{{this.id}}">View</a>
        <a class="btn btn-success" href="/edit/{{this.id}}">Edit</a>
        <a class="btn btn-danger" href="/delete/{{this.id}}">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a class="btn btn-primary mb-1" href="/create">New Friend</a>